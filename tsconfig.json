{
  "compilerOptions": {
    "target": "ESNext",                                   
    "module": "ESNext",                                
    "rootDir": "src",                                  
    "outDir": "build",                                   
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,    
    "allowSyntheticDefaultImports": true,        
    "strict": false,                                      
    "skipLibCheck": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"                                 
  },
  "include": ["src/**/*"]
}
